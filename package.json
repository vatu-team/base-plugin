{
    "name": "base-plugin",
    "version": "1.0.0",
    "description": "NPM configuration for Base Plugin development.",
    "author": "Vatu <info@vatu.dev>",
    "license": "MIT",
    "engines": {
        "npm": "^10.1.0",
        "node": "^20.9.0"
    },
    "scripts": {
        "start": "run-s \"start:scripts:blocks\"",
        "build": "run-s \"build:scripts:blocks\"",
        "wp-env": "wp-env",
        "composer": "wp-env run composer",
        "build:scripts:blocks": "run-p \"build:scripts:blocks:dynamic\" \"build:scripts:blocks:static\"",
        "build:scripts:blocks:dynamic": "wp-scripts build --webpack-src-dir=./src/Domain/ExampleBlocks/Blocks/dynamic/src --output-path=./src/Domain/ExampleBlocks/Blocks/dynamic/build",
        "build:scripts:blocks:static": "wp-scripts build --webpack-src-dir=./src/Domain/ExampleBlocks/Blocks/static/src --output-path=./src/Domain/ExampleBlocks/Blocks/static/build",
        "start:scripts:blocks": "run-p \"start:scripts:blocks:dynamic\" \"start:scripts:blocks:static\"",
        "start:scripts:blocks:dynamic": "wp-scripts start --webpack-src-dir=./src/Domain/ExampleBlocks/Blocks/dynamic/src --output-path=./src/Domain/ExampleBlocks/Blocks/dynamic/build",
        "start:scripts:blocks:static": "wp-scripts start --webpack-src-dir=./src/Domain/ExampleBlocks/Blocks/static/src --output-path=./src/Domain/ExampleBlocks/Blocks/static/build"
    },
    "devDependencies": {
        "@wordpress/compose": "^7.7.0",
        "@wordpress/create-block": "^4.39.0",
        "@wordpress/env": "^10.4.0",
        "@wordpress/plugins": "^7.7.0",
        "@wordpress/scripts": "^27.8.0",
        "npm-run-all": "^4.1.5",
        "path": "^0.12.7",
        "webpack-remove-empty-scripts": "^1.0.4"
    }
}
